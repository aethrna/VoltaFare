<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/device_detail_activity.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/etDeviceName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Device Name" />

    <EditText
        android:id="@+id/etDeviceDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Description" />

    <EditText
        android:id="@+id/etWattUsage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Watt Usage"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/etDailyHours"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Daily Usage (hours)"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/btnSubmitDevice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Device" />
</LinearLayout>
